<Window x:Class="SentToDo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SentToDo"
        mc:Ignorable="d"
        Loaded="MainWindow_OnLoaded"
        Title="SentToDo" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DataGridToDoList" FontSize="16" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path = PushDate}" IsReadOnly="True" Header="Creation date"  Width="200"></DataGridTextColumn>
                <DataGridCheckBoxColumn Binding="{Binding Path = IsCompleted, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False" Header="Done"  Width="50"></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding="{Binding Path = Name}" IsReadOnly="False" Header="Task" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
